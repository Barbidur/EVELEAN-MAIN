<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
             <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-select.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-select-country.css') }}">
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="red-bg no-pad">
            <div class="row">
                <div class="col-xs-5"></div>
                <div class="white-bg col-xs-2">
                    <img src="{{ asset('images/logo.png') }}" alt="" class="img-responsive center logo" />
                </div>
                <div class="col-xs-5"></div>
            </div>
        </div>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/bootstrap-select.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap-select-country.min.js') }}"></script>
        {% endblock %}
    </body>
</html>