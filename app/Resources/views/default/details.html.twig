{% extends 'base_small_center.html.twig' %}

{% block body %}
    <div class="container">
        <form action="#" method="post" id="customer_info" role="form" data-toggle="validator">
            <h2 class="text-center">Share a few details about yourself</h2>

            <p class="text-center">We'll make sure you get the most helpful resources.</p>

            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="first_name">Which option best describes you?</label>
                        <div class="radio">
                            <label>
                                <input type="radio" name="business_type" id="business_type1" value="0">
                                New business
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="business_type" id="business_type2" value="1">
                                Existing business that's new to online marketing
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="business_type" id="business_type3" value="2">
                                Established business with online marketing experience
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="business_type" id="business_type4" value="3">
                                Consultant or Agency marketing multiple businesses
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="last_name">What industry will you be using Leadpages for</label>
                        <select class="form-control" name="industry" id="industry"  required="required">
                            <option value="">Select an industry</option>
                            <option value="0">Industry 1</option>
                            <option value="1">Industry 2</option>
                            <option value="2">Industry 3</option>
                            <option value="3">Industry 4</option>
                            <option value="4">Industry 5</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="email">Do you own a domain for your business (exaple: wwww.myamazingbusiness.com)?</label>
                        <div class="radio">
                            <label>
                                <input type="radio" name="own_domain" id="own_domain1" value="Yes"  required="required">
                                Yes
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="own_domain" id="own_domain2" value="No">
                                No
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="password">How much do you spend on Facebook ads in an average month ?</label>
                        <div class="radio">
                            <label>
                                <input type="radio" name="facebook_ads_expenditure" id="facebook_ads_expenditure1" value="0"  required="required">
                                $0 - I'm not interested in Facebook Advertising
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="facebook_ads_expenditure" id="facebook_ads_expenditure2" value="1">
                                $0 - But I'm hoping to start Facebook Advertising soon
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="facebook_ads_expenditure" id="facebook_ads_expenditure3" value="2">
                                $5 - $200
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="facebook_ads_expenditure" id="facebook_ads_expenditure4" value="3">
                                $201 - $2,000
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="facebook_ads_expenditure" id="facebook_ads_expenditure5" value="4">
                                $2,001 - $10,000
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="facebook_ads_expenditure" id="facebook_ads_expenditure6" value="5">
                                $10,001+
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="password">What would you like to acheive first with Leadpages?</label>
                        <div class="radio">
                            <label>
                                <input type="radio" name="leadpages_target" id="leadpages_target1" value="0" required="required">
                                Acquire new leads
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="leadpages_target" id="leadpages_target2" value="1">
                                Engage with my audience
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="leadpages_target" id="leadpages_target3" value="2">
                                Sell a product or service
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="leadpages_target" id="leadpages_target4" value="3">
                                Something else
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-6 col-xs-offset-6">
                    <button type="submit" class="btn btn-primary btn-lg">Continue</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
