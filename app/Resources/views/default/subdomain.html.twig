{% extends 'base_center.html.twig' %}

{% block body %}
    <div class="container">
        <form>
            <h2 class="text-center"></h2>
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="subdomain">Create your subdomain</label>
                        <div class="input-group">
                            <span class="input-group-addon">https://</span>
                            <input type="text" class="form-control" id="subdomain" name="subdomain" placeholder="your-company">
                            <span class="input-group-addon">.evelean.com</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-xs-offset-6">
                    <button type="submit" class="btn btn-primary btn-lg">Continue</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
